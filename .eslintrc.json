{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "html"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "it": true,
    "mocha": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true
  },
  "rules": {
    "no-multiple-empty-lines": ["error", {
      "max": 1
    }],
    "import/no-unresolved": "off",
    "import/extensions": "off"
  }
}
